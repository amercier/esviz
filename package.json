{
  "name": "esviz",
  "version": "0.2.0",
  "description": "Automatic diagram generation tool for ES6+ projects.",
  "license": "MIT",
  "repository": "amercier/esviz",
  "author": "Alex Mercier <pro.alexandre.mercier@gmail.com> (http://amercier.com)",
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "transpile": "rm -rf dist && mkdir dist && cp -Rv src/assets dist/assets &&  babel src -d dist",
    "prepublish": "npm run transpile",
    "doc": "rm -rf esdoc && esdoc -c esdoc.json",
    "lint": "eslint .",
    "test": "npm run lint && rm -rf coverage && istanbul cover _mocha -- $(find specs -name '*.spec.js') --recursive --compilers js:babel-register",
    "start": "mocha $(find specs -name '*.spec.js') --recursive --compilers js:babel-register --watch --growl"
  },
  "main": "dist/lib/index.js",
  "bin": {
    "esviz": "dist/lib/cli.js"
  },
  "keywords": [
    "es6",
    "automatic",
    "diagram",
    "generation",
    "generator",
    "es6",
    "babel",
    "jsdoc",
    "esdoc"
  ],
  "dependencies": {
    "bluebird": "^3.3.4",
    "bootstrap": "^3.3.6",
    "d3": "^3.5.16",
    "esprima": "^2.7.2",
    "handlebars": "^4.0.5",
    "lodash": "^4.6.1",
    "walk": "^2.3.9",
    "web-resource-inliner": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.3.1",
    "codecov": "^1.0.1",
    "esdoc": "^0.4.6",
    "eslint": "^2.5.1",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-react": "^5.0.1",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^2.4.5",
    "sinon": "^1.17.3"
  }
}
